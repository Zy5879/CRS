generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id             String       @id @default(uuid())
  name           String
  email          String       @unique
  password       String
  dob            DateTime
  phone          String
  state          String
  city           String
  driversLicense String       @unique
  createdAt      DateTime     @default(now())
  reservations   Reservation?
}

model Vehicles {
  id           String       @id @default(uuid())
  make         String
  model        String
  year         Int
  transmission Transmission
  pricePerDay  Decimal      @db.Decimal(12, 2)
  state        String
  city         String
  maintenance  Maintenance
  Reservation  Reservation?
}

model Employee {
  id        String   @id @default(uuid())
  name      String
  password  String
  email     String   @unique
  dob       DateTime
  phone     String
  state     String
  city      String
  createdAt DateTime
  role      Role
}

model Reservation {
  id                String            @id @default(uuid())
  cust_id           String            @unique
  vehicle_id        String            @unique
  pickupLocation    String
  dropOffLocation   String
  pickupDateTime    DateTime
  dropOffDateTime   DateTime
  reservationStatus ReservationStatus @default(PENDING)
  Invoice           Invoice?
  customer          Customer          @relation(fields: [cust_id], references: [id])
  vehicle           Vehicles          @relation(fields: [vehicle_id], references: [id])
}

model Invoice {
  id             String        @id @default(uuid())
  reservation_id String        @unique
  amount         Decimal       @db.Decimal(12, 2)
  status         InvoiceStatus
  reservation    Reservation   @relation(fields: [reservation_id], references: [id])
}

enum Transmission {
  AUTOMATIC
  MANUAL
}

enum Maintenance {
  IN_MAINTENANCE
  OUT_OF_SERVICE
  IN_SERVICE
}

enum Role {
  ADMIN
  STAFF
}

enum InvoiceStatus {
  PAID
  UNPAID
}

enum ReservationStatus {
  PENDING
  ACTIVE
  COMPLETED
  CANCELLED
  LATE
}
